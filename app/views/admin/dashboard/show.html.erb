<section class="admin-dashboard">
  <header class="page-header">
    <h1>Admin Dashboard</h1>
  </header>

  <div class="dashboard-stats">
    <div class="stat">
      <h2>Products</h2>
      <p><%= @product_count %> products in the database</p>
      <%= link_to 'View Products', admin_products_path, class: 'btn btn-primary' %>
    </div>
    <div class="stat">
      <h2>Categories</h2>
      <p><%= @category_count %> categories in the database</p>
      <%= link_to 'View Categories', admin_categories_path, class: 'btn btn-primary' %>
    </div>
  </div>
</section>
