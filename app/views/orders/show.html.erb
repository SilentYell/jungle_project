<section class="order-show">
  <header class="page-header">
    <h1>Order Details</h1>
  </header>

  <div class="order-details">
    <p><strong>Email:</strong> <%= @order.email %></p>
    <p><strong>Total Amount:</strong> <%= humanized_money_with_symbol @order.total_cents / 100.0 %></p>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'orders/line_item', collection: @line_items, as: :line_item %>
      </tbody>
    </table>
  </div>
</section>
